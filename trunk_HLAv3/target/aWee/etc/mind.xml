<service>

	<MindSpace>
	</MindSpace>

	<MindMap>
    <MindAreaSet>
      <MindArea id="ThalamusArea" enabled="false"/>
		  <MindArea id="PerceptionArea" enabled="true">
			  <property name="posX" value="0"/>
			  <property name="posY" value="0"/>
			  <property name="posZ" value="0"/>
			  <property name="sizeX" value="10000"/>
			  <property name="sizeY" value="10000"/>
			  <property name="sizeZ" value="2"/>
        <property name="transmitters" value="GLU"/>
      </MindArea>
		  <MindArea id="HippocampusArea" enabled="false"/>
		  <MindArea id="ParietalArea" enabled="false"/>
		  <MindArea id="PrefrontalCortexArea" enabled="false"/>
		  <MindArea id="BasalGangliaArea" enabled="false"/>
		  <MindArea id="BrainStemArea" enabled="false"/>
		  <MindArea id="CranialNerveArea" enabled="false"/>
		  <MindArea id="SpinalCordArea" enabled="false"/>
		  <MindArea id="MotorNerveArea" enabled="false"/>
		  <MindArea id="BodyFeelingNerveArea" enabled="false"/>
    
		  <MindArea id="SensorArea" enabled="true">
			  <property name="posX" value="0"/>
			  <property name="posY" value="0"/>
			  <property name="posZ" value="0"/>
			  <property name="sizeX" value="10000"/>
			  <property name="sizeY" value="10000"/>
			  <property name="sizeZ" value="2"/>
        <property name="transmitters" value="GLU"/>
      </MindArea>
		  <MindArea id="EffectorArea" enabled="true">
			  <property name="posX" value="0"/>
			  <property name="posY" value="0"/>
			  <property name="posZ" value="0"/>
			  <property name="sizeX" value="10000"/>
			  <property name="sizeY" value="10000"/>
			  <property name="sizeZ" value="2"/>
        <property name="transmitters" value=""/>
      </MindArea>
    </MindAreaSet>

		<MindLinkSet>
			<MindLink masterArea="SensorArea" slaveArea="PerceptionArea" channel="SensorArea"/>
		</MindLinkSet>

    <MindNetworkTypeSet>
      <MindNetworkType name="sensor-stream">
        <NeuroLink name="data" type="ExcitatoryLink" transmitter="GLU" forward="true"/>
        <NeuroLink name="control" type="ExcitatoryLink" transmitter="GLU" forward="false"/>
        <NeuroLink name="control-feedback" type="ExcitatoryLink" transmitter="GLU" forward="true"/>
      </MindNetworkType>
    </MindNetworkTypeSet>

    <MindNetworkSet>
			<MindNet name="SensorFileSysWalker" type="sensor-stream"/>
		</MindNetworkSet>
	</MindMap>

	<ActiveMemory>
		<MemoryFocus>
			<property name="objectCount" value="100"/>
		</MemoryFocus>

		<ThreadPool>
			<property name="name" value="AMT"/>
			<property name="run" value="false"/>
			<property name="threadCount" value="20"/>
			<property name="operationsPerSecond" value="100"/>
			<property name="secondsPerCycle" value="1"/>
			<property name="maxLoad" value="10"/>
		</ThreadPool>
	</ActiveMemory>

</service>
