<service>

	<!-- ================= basic neural networks parameters =============== -->
	<neural-networks>
		<property name="NEURON_SYNAPTIC_THRESHOLD_INITIAL_pQ" value="70"/>
		<property name="NEURON_SYNAPTIC_THRESHOLD_MIN_pQ" value="10"/>
		<property name="NEURON_ACTION_POTENTIAL_BY_SIGNAL_pQ" value="20"/>
		<property name="NEURON_MEMBRANE_POTENTIAL_BY_ACTION_POTENTIAL_pQ" value="65"/>
		<property name="NEURON_MEMBRANE_THRESHOLD_INITIAL_pQ" value="60"/>
		<property name="NEURON_FIRE_OUTPUT_BY_MEMBRANE_POTENTIAL_pQ" value="80"/>
		<property name="NEURON_INHIBIT_DELAY_ms" value="10"/>
		<property name="NEURON_FIRE_OUTPUT_SILENT_ms" value="10"/>
		<property name="NEURON_FIRE_IMPULSE_pQ" value="2"/>
		<property name="NEURON_POTENTIAL_DISCHARGE_RATE_pQ_per_ms" value="1"/>
		<property name="NEURON_OUTPUT_DISCHARGE_RATE_pQ_per_ms" value="1"/>
		<property name="NEURON_FULL_RELAX_ms" value="1000"/>
		<property name="NEURON_CONNECTIVITY_UPDATE_FACTOR" value="95"/>
	</neural-networks>

	<!-- ================= mind geometry =============== -->
	<mind-space>
	</mind-space>

	<!-- ================= mind components and circuits =============== -->
	<mind-map>

		<region-type-set>

			<region-type name="nucleus" implementation="mock">
				<connector id="nucleus.input" type="target"/>
				<connector id="nucleus.output" type="source"/>
				<connector id="nucleus.interneurons" type="target"/>
			</region-type>

			<region-type name="neocortex" implementation="mock">
				<connector id="neocortex.ffin" type="target"/>
				<connector id="neocortex.ffout" type="source"/>
				<connector id="neocortex.fbin" type="target"/>
				<connector id="neocortex.fbout" type="source"/>
			</region-type>

			<region-type name="allocortex" implementation="mock">
			</region-type>

		</region-type-set>

		<component-set>

			<area name="VBA" enabled="true">
				<region name="VBA.FD.RT" type="nucleus"/>
				<region name="VBA.FD.TH.LGN" type="nucleus"/>
				<region name="VBA.FD.TH.IPV" type="nucleus"/>
				<region name="VBA.FD.TH.LPV" type="nucleus"/>
				<region name="VBA.FD.TH.MPV" type="nucleus"/>
				<region name="VBA.FD.TH.OPV" type="nucleus"/>
				<region name="VBA.MM.SC" type="nucleus"/>
				<region name="VBA.MM.PT.NOT" type="nucleus"/>
				<region name="VBA.MM.PT.PON" type="nucleus"/>
				<region name="VBA.MM.PT.PR" type="nucleus"/>
				<region name="VBA.MM.PT.SL" type="nucleus"/>
				<region name="VBA.MM.TRH" type="nucleus"/>
				<region name="VBA.MM.OCN" type="nucleus"/>
				<region name="VBA.MM.DK" type="nucleus"/>
				<region name="VBA.HP.ABD" type="nucleus"/>
				<region name="VBA.HM.NPH" type="nucleus"/>
			</area>

			<area name="VCA" enabled="true">
				<region name="VCA.FT.V1" type="neocortex"/>
				<region name="VCA.FT.V2" type="neocortex"/>
				<region name="VCA.FT.V3" type="neocortex"/>
				<region name="VCA.FT.V4" type="neocortex"/>
				<region name="VCA.FT.MT" type="neocortex"/>
				<region name="VCA.FT.PO" type="neocortex"/>
				<region name="VCA.FT.IT.TEO" type="neocortex"/>
				<region name="VCA.FT.IT.TE" type="neocortex"/>
			</area>

			<area name="ACA" enabled="true">
				<region name="ACA.FT.A1" type="neocortex"/>
				<region name="ACA.FT.A2" type="neocortex"/>
				<region name="ACA.FT.A3" type="neocortex"/>
				<region name="ACA.FT.A4" type="neocortex"/>
			</area>

			<area name="MCA" enabled="true">
				<region name="MCA.FT.SMC" type="neocortex"/>
				<region name="MCA.FT.PMC" type="neocortex"/>
				<region name="MCA.FT.MC" type="neocortex"/>
				<region name="MCA.FT.S1" type="neocortex"/>
				<region name="MCA.FT.INS" type="neocortex"/>
				<region name="MCA.FT.TPC" type="neocortex"/>
				<region name="MCA.FD.VA" type="nucleus" size="100"/>
				<region name="MCA.FD.VL" type="nucleus" size="100"/>
				<region name="MCA.FD.VP" type="nucleus" size="100"/>
			</area>

			<area name="PCA" enabled="true">
				<region name="PCA.FT.SPL.SA" type="neocortex"/>
				<region name="PCA.FT.SPL.PR" type="neocortex"/>
				<region name="PCA.FT.IPL" type="neocortex"/>
				<region name="PCA.FT.IPS" type="neocortex"/>
				<region name="PCA.FT.RSC" type="neocortex"/>
				<region name="PCA.FT.PCG" type="neocortex"/>
				<region name="PCA.FD.TH.RIL" type="nucleus" size="100"/>
				<region name="PCA.FD.TH.LP" type="nucleus" size="100"/>
				<region name="PCA.FD.TH.SG" type="nucleus" size="100"/>
				<region name="PCA.FD.TH.PO" type="nucleus" size="100"/>
			</area>

			<area name="HCA" enabled="true">
				<region name="HCA.FT.PH.PPG" type="neocortex"/>
				<region name="HCA.FT.PH.PRR" type="neocortex"/>
				<region name="HCA.FT.PH.ET" type="neocortex"/>
				<region name="HCA.FT.HC.CA1" type="allocortex"/>
				<region name="HCA.FT.HC.CA2" type="allocortex"/>
				<region name="HCA.FT.HC.CA3" type="allocortex"/>
				<region name="HCA.FT.HC.CA4" type="allocortex"/>
				<region name="HCA.FT.DG" type="allocortex"/>
				<region name="HCA.FT.PRS" type="neocortex"/>
				<region name="HCA.FT.PAS" type="neocortex"/>
				<region name="HCA.FT.PSS" type="allocortex"/>
				<region name="HCA.FT.SUB" type="allocortex"/>
				<region name="HCA.FD.LMB" type="nucleus" size="100"/>
				<region name="HCA.FD.MMB" type="nucleus" size="100"/>
				<region name="HCA.FD.TH.AN" type="nucleus" size="100"/>
				<region name="HCA.FD.TH.LD" type="nucleus" size="100"/>
				<region name="HCA.FD.TH.RE" type="nucleus" size="100"/>
				<region name="HCA.FD.TH.RH" type="nucleus" size="100"/>
			</area>

			<area name="FCA" enabled="true">
				<region name="FCA.FT.LPFC" type="neocortex"/>
				<region name="FCA.FT.OMPFC" type="neocortex"/>
				<region name="FCA.FT.ACG" type="neocortex"/>
				<region name="FCA.FT.SGC" type="neocortex"/>
				<region name="FCA.FT.BRA" type="neocortex"/>
				<region name="FCA.FD.TH.MD" type="nucleus" size="100"/>
				<region name="FCA.FD.TH.SM" type="nucleus" size="100"/>
			</area>

		</component-set>

		<!-- ================= typical links =============== -->
		<connection-type-set>

			<connection-type name="nucleus-nucleus">
				<link-type name="positive" implementation="mock" type="excitatory" nt="GLU" src="nucleus.output" dst="nucleus.input"/>
			</connection-type>

			<connection-type name="nucleus-neocortex">
				<link-type name="primary-input" implementation="mock" type="excitatory" nt="GLU" src="nucleus.output" dst="neocortex.ffin"/>
			</connection-type>

			<connection-type name="neocortex-nucleus">
				<link-type name="primary-input" implementation="mock" type="excitatory" nt="GLU" src="neocortex.ffout" dst="nucleus.input"/>
			</connection-type>

			<connection-type name="neocortex-neocortex">
				<link-type name="cortex-forward" implementation="mock" type="excitatory" nt="GLU" src="neocortex.ffout" dst="neocortex.ffin"/>
				<link-type name="cortex-feedback" implementation="mock" type="excitatory" nt="GLU" src="neocortex.fbout" dst="neocortex.fbin" back="true"/>
			</connection-type>

		</connection-type-set>

		<circuit-set>

			<!-- ================= eye sensor -> subcortical -> cortex -> subcortical -> eye sensor =============== -->
			<circuit name="vision" enabled="true">
				<connection type="nucleus-nucleus" src="VBA.FD.RT" dst="VBA.FD.TH.LGN"/>
				<connection type="nucleus-nucleus" src="VBA.FD.RT" dst="VBA.MM.SC"/>
				<connection type="nucleus-nucleus" src="VBA.MM.SC" dst="VBA.FD.TH.LGN"/>
				<connection type="nucleus-nucleus" src="VBA.MM.SC" dst="VBA.FD.TH.IPV"/>
				<connection type="nucleus-nucleus" src="VBA.MM.SC" dst="VBA.FD.TH.LPV"/>
				<connection type="nucleus-neocortex" src="VBA.FD.TH.LGN" dst="VCA.FT.V1"/>
				<connection type="nucleus-neocortex" src="VBA.FD.TH.IPV" dst="PCA.FT.IPL"/>
				<connection type="nucleus-neocortex" src="VBA.FD.TH.LPV" dst="VCA.FT.V2"/>
				<connection type="neocortex-nucleus" src="PCA.FT.IPL" dst="VBA.MM.SC"/>
				<connection type="nucleus-nucleus" src="VBA.MM.SC" dst="VBA.MM.OCN"/>
			</circuit>

			<!-- ================= intracortical visual "what" stream processing =============== -->
			<circuit name="visual-objects" enabled="true">
				<connection type="neocortex-neocortex" src="VCA.FT.V1" dst="VCA.FT.V2"/>
				<connection type="neocortex-neocortex" src="VCA.FT.V2" dst="VCA.FT.V4"/>
				<connection type="neocortex-neocortex" src="VCA.FT.V4" dst="VCA.FT.IT.TEO"/>
				<connection type="neocortex-neocortex" src="VCA.FT.V4" dst="VCA.FT.IT.TE"/>
				<connection type="neocortex-neocortex" src="VCA.FT.IT.TEO" dst="VCA.FT.IT.TE"/>
				<connection type="neocortex-neocortex" src="VCA.FT.IT.TE" dst="HCA.FT.PH.ET"/>
			</circuit>

		</circuit-set>

	</mind-map>

	<!-- ================= memory state =============== -->
	<active-memory>
		<memory-focus>
			<property name="objectCount" value="100"/>
		</memory-focus>

		<thread-pool>
			<property name="name" value="AMT"/>
			<property name="run" value="false"/>
			<property name="threadCount" value="20"/>
			<property name="operationsPerSecond" value="100"/>
			<property name="secondsPerCycle" value="1"/>
			<property name="maxLoad" value="10"/>
		</thread-pool>
	</active-memory>

</service>
