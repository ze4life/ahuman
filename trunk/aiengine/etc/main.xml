<engine>
	<!-- service configuration -->

	<services>
		<service name="Media">
			<property name="file" value="media.xml"/>
		</service>
		<service name="IO">
			<property name="file" value="io.xml"/>
		</service>
		<service name="DB">
			<property name="file" value="database.xml"/>
		</service>
		<service name="Knowledge">
			<property name="file" value="knowledge.xml"/>
		</service>
		<service name="Commands">
			<property name="file" value="commands.xml"/>
		</service>
		<service name="NNLib">
			<property name="file" value="nnlib.xml"/>
		</service>
		<service name="HtmLib">
			<property name="file" value="htmlib.xml"/>
		</service>
		<service name="TestPool">
			<property name="file" value="test.xml"/>
		</service>
	</services>

	<!-- logging configuration -->

	<logging level="INFO">
		<property name="syncMode" value="false"/>
		<property name="filename" value="log\main.log"/>
		<property name="format" value="log: %"/>
		
		<objectLogLevel level="DEBUG">
			<class name="NNFinderFactory" level="DEBUG"/>
			<class name="NNFinder" level="DEBUG"/>
			<class name="NNStrategyBackPropagation" level="DEBUG">
				<instance name="NNFinderFactory::P1S" level="ERROR"/>
			</class>
		</objectLogLevel>

		<serviceLogLevel level="DEBUG">
		</serviceLogLevel>

		<customLogLevel level="DEBUG">
			<class name="SocketServer::debug" level="ERROR"/>
			<class name="SocketServer::chat" level="ERROR"/>
			<class name="SocketConnection" level="ERROR"/>
			<class name="HtmLibDebug" level="INFO">
				<exclude string="showAcceptActions"/>
			</class>
			<class name="HtmLayer" level="DEBUG">
				<property name="showAcceptActions" value="3,4"/>
			</class>
		</customLogLevel>
	</logging>

	<!-- debug features -->

	<debug>
		<property name="debugchannel" value="debug.commands"/>
	</debug>
</engine>
