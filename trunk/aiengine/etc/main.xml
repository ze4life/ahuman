<engine>
	<!-- service configuration -->

	<services>
		<service name="AIMedia">
			<property name="file" value="media.xml"/>
		</service>
		<service name="AIIO">
			<property name="file" value="io.xml"/>
		</service>
		<service name="AIHeart">
			<property name="file" value="heart.xml"/>
		</service>
		<service name="AIDB">
			<property name="file" value="database.xml"/>
		</service>
		<service name="AIKnowledge">
			<property name="file" value="knowledge.xml"/>
		</service>
		<service name="AIMind">
			<property name="file" value="mind.xml"/>
		</service>
		<service name="AINNLib">
			<property name="file" value="nnlib.xml"/>
		</service>
		<service name="AIHtmLib">
			<property name="file" value="htmlib.xml"/>
		</service>
	</services>

	<!-- logging configuration -->

	<logging level="I">
		<property name="syncMode" value="false"/>
		<property name="filename" value="log\main.log"/>
		<property name="format" value="log: %"/>
		
		<objectLogLevel level="E">
			<class name="NNFinderFactory" level="A"/>
			<class name="NNFinder" level="A"/>
			<class name="NNStrategyBackPropagation" level="A">
				<instance name="NNFinderFactory::P1S" level="E"/>
			</class>
		</objectLogLevel>

		<serviceLogLevel level="A">
		</serviceLogLevel>

		<customLogLevel level="E">
			<class name="SocketServer::debug" level="E"/>
			<class name="SocketServer::chat" level="E"/>
			<class name="SocketConnection" level="E"/>
			<class name="HtmLibDebug" level="A">
				<exclude string="showAcceptActions"/>
			</class>
			<class name="HtmLayer" level="A">
				<property name="showAcceptActions" value="3,4"/>
			</class>
		</customLogLevel>
	</logging>

	<!-- debug features -->

	<debug>
		<property name="debugchannel" value="debug.commands"/>
	</debug>
</engine>
