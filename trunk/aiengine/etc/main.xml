<engine>
	<!-- service configuration -->

	<services>
		<service name="Media" run="true">
			<property name="file" value="media.xml"/>
		</service>
		<service name="IO">
			<property name="file" value="svcio.xml"/>
		</service>
		<service name="DB">
			<property name="file" value="svcdb.xml"/>
		</service>
		<service name="Knowledge">
			<property name="file" value="knowledge.xml"/>
		</service>
		<service name="Intelligence">
			<property name="file" value="intelligence.xml"/>
		</service>
		<service name="Cognition">
			<property name="file" value="cognition.xml"/>
		</service>
		<service name="Body">
			<property name="file" value="body.xml"/>
		</service>
		<service name="Brain">
			<property name="file" value="brain.xml"/>
		</service>
		<service name="LibNN">
			<property name="file" value="libnn.xml"/>
		</service>
		<service name="LibBN">
			<property name="file" value="libbn.xml"/>
		</service>
		<service name="TestPool">
			<property name="file" value="test.xml"/>
		</service>
	</services>

	<!-- logging configuration -->

	<logging level="INFO">
		<property name="syncMode" value="false"/>
		<property name="filename" value="log\main.log"/>
		<property name="format" value="log: %"/>
		
		<objectLogLevel level="INFO">
			<class name="SensorFileSysWalker" level="DEBUG"/>
		</objectLogLevel>

		<serviceLogLevel level="INFO">
		</serviceLogLevel>

		<customLogLevel level="INFO">
			<class name="SocketServer::debug" level="ERROR"/>
			<class name="SocketServer::chat" level="ERROR"/>
			<class name="SocketConnection" level="ERROR"/>
			<class name="HtmLibDebug" level="INFO">
				<exclude string="showAcceptActions"/>
			</class>
			<class name="HtmLayer" level="DEBUG">
				<property name="showAcceptActions" value="3,4"/>
			</class>
		</customLogLevel>
	</logging>

	<!-- debug features -->

	<debug>
		<property name="debugchannel" value="debug.commands"/>
	</debug>
</engine>
