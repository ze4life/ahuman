<service>

	<MindMap>
		<MindArea id="Sensors">
			<property name="size" value="10000"/>
		</MindArea>
		<MindArea id="NeoCortex">
			<property name="size" value="100000"/>
		</MindArea>
		<MindArea id="EnthorinalCortex">
			<property name="size" value="100000"/>
		</MindArea>
		<MindLinks>
			<MindLink masterArea="Sensors" slaveArea="NeoCortex" channel="sensordata"/>
			<MindLink masterArea="NeoCortex" slaveArea="EnthorinalCortex" channel="features"/>
		</MindLinks>
	</MindMap>

	<ActiveMemory>
		<MemoryFocus>
			<property name="objectCount" value="100"/>
		</MemoryFocus>
		<ThreadPool>
			<property name="threadCount" value="2"/>
			<property name="operationsPerSecond" value="1"/>
			<property name="secondsPerCycle" value="5"/>
			<property name="maxLoad" value="1"/>
		</ThreadPool>
	</ActiveMemory>

</service>
